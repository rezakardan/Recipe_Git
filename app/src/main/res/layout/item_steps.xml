<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rounded_light_stroke"
    android:layout_marginTop="@dimen/_5mdp"
    android:padding="@dimen/_5mdp">















    <TextView
        android:id="@+id/stepNumber"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_rounded_green"
        android:layout_marginTop="@dimen/_5mdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14font_mdp"
        android:gravity="center"
        app:fontPath="fonts/atlas_bold.ttf"
        android:layout_width="@dimen/_25mdp"
        android:layout_height="@dimen/_25mdp"/>


    <TextView
        android:id="@+id/timeTxt"
        android:layout_marginTop="@dimen/_5mdp"
        android:gravity="center"
        android:textColor="@color/dolphinGray"
        android:textSize="@dimen/_9font_mdp"
        app:layout_constraintStart_toStartOf="@id/stepNumber"
        app:layout_constraintTop_toBottomOf="@id/stepNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <TextView
        android:id="@+id/descStep"
        app:layout_constraintStart_toEndOf="@id/stepNumber"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="@id/stepNumber"
android:layout_marginEnd="@dimen/_5mdp"
        android:layout_marginStart="@dimen/_10mdp"
        app:fontPath="fonts\atlas_bold.ttf"
        android:lineSpacingExtra="@dimen/_5mdp"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/_9font_mdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>










</androidx.constraintlayout.widget.ConstraintLayout>