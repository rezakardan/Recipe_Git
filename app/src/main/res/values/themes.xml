<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipeFood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/jacarta</item>
        <item name="colorPrimaryVariant">@color/dark_gunmetal</item>
        <item name="colorOnPrimary">@color/pastel_pink</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="DarkGreenTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">@color/darkGreen</item>

        <item name="boxStrokeWidth">@dimen/_1mdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_15mdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_15mdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_15mdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_15mdp</item>
        <item name="android:layout_marginTop">@dimen/_10mdp</item>
        <item name="android:textColor">@color/darkGreen</item>
        <item name="boxStrokeErrorColor">@color/tart_orange</item>
        <item name="hintTextColor">@color/moonstoneBlue</item>
        <item name="startIconTint">@color/darkGreen</item>
    </style>

    <style name="DarkGreenMaterialButton" > 
    
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:textSize">@dimen/_14font_mdp</item>
    <item name="backgroundTint">@color/darkGreen</item>
    <item name="cornerRadius">@dimen/_15mdp</item>

    </style>
    
    
    
    
    <style name="DarkChip" parent="Widget.MaterialComponents.Chip.Choice">

<item name="chipBackgroundColor" >@color/color_chip_background</item>





    </style>



    <!--progressBar-->

    <style name="DarkProgressBar" >


        <item name="colorAccent">@color/jacarta</item>



    </style>




<!--Icon Text-->


    <style name="IconTextView" >

<item name="android:drawablePadding">@dimen/_3mdp</item>

        <item name="android:textSize">@dimen/_7font_mdp</item>

        <item name="android:textColor">@color/gray</item>

        <item name="android:gravity">center_horizontal</item>

        <item name="drawableTint">@color/gray</item>





    </style>
    
    
    
    <style name="RoundedImageViewShapeAble">
        
        <item name="cornerFamily">rounded</item>
        
        <item name="cornerSize">@dimen/_8mdp</item>




        
        
        
    </style>



    <style name="DietChip" parent="Widget.MaterialComponents.Chip.Choice">



        <item name="chipBackgroundColor">@color/whiteSmoke</item>

        <item name="android:clickable">false</item>
<item name="android:checkable">false</item>

    </style>


    <!--Shape imageview-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8mdp</item>
    </style>


</resources>